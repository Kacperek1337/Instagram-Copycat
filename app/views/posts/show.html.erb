<div class="container text-center mb-3">
  <h1><%= @post.title %></h1>

  <%= image_tag @post.picture.url, width: '80%', style: 'min-width: 400px;' %>

  <h5 class="mt-2"><%= @post.description %></h5>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', profile_path(@post.user.nickname) %>
</div>