<div class="row">
        <div class="col-5 text-right">
            <%= image_tag avatar_url, class: 'rounded-circle', width: '50%', style: 'min-width: 150px;' %>
        </div>
        <div class="col-7 text-left">
            <h1><%= @user.nickname %></h1>
            <h3 class="text-secondary">Member since <%= @user.created_at.strftime '%H %B' %>
            | <%= pluralize @user.followers.count, 'Follower' %></h3>
            <div class="row ml-auto">
                <%= button_to 'Edit Profile', edit_user_registration_url, 
                method: :get, class: 'btn btn-primary mr-1'  if @user == current_user %>
                <% if is_followed? %>
                    <%= button_to 'Unfollow', destroy_follow_url(@user),
                    method: :delete, class: 'btn btn-secondary', remote: true %>
                <% else %>
                    <%= button_to 'Follow', create_follow_url(@user),
                    method: :post, class: 'btn btn-info', remote: true %>
                <% end %>
            </div>
            <div style="width: 80%;">
                <h6 class="mt-2">
                    <%= @user.description %>
                </h6>
            </div>
        </div>
    </div>